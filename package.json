{
  "name": "multi-tenant-crm-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ready Node.js + Express backend for a multi-tenant CRM with Cassandra/ScyllaDB",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
